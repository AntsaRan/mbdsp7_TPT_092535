<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    tools:context=".views.fragment.activity.Register">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="153dp"
        android:layout_height="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/footbet" />

    <EditText
        android:id="@+id/pseudo"
        android:layout_width="285dp"
        android:layout_height="52dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/custum_input"
        android:drawableStart="@android:drawable/sym_action_email"
        android:ems="10"
        android:hint="Pseudo"
        android:inputType="text"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="#000000"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date" />

    <EditText
        android:id="@+id/mail"
        android:layout_width="285dp"
        android:layout_height="52dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/custum_input"
        android:drawableStart="@android:drawable/sym_action_email"
        android:ems="10"
        android:hint="Votre email"
        android:inputType="textEmailAddress"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="#000000"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pseudo" />

    <EditText
        android:id="@+id/prenom"
        android:layout_width="285dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custum_input"
        android:drawableStart="@android:drawable/sym_action_email"
        android:ems="10"
        android:hint="PrÃ©nom"
        android:inputType="text"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="#000000"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nom" />

    <EditText
        android:id="@+id/nom"
        android:layout_width="285dp"
        android:layout_height="52dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/custum_input"
        android:drawableStart="@drawable/ic_equipe"
        android:ems="10"
        android:hint="Nom"
        android:inputType="text"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="#000000"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/password2"
        android:layout_width="285dp"
        android:layout_height="52dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/custum_input"
        android:drawableStart="@android:drawable/ic_menu_edit"
        android:ems="10"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="#000000"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mail" />

    <EditText
        android:id="@+id/date"
        android:layout_width="285dp"
        android:layout_height="52dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/custum_input"
        android:clickable="true"
        android:drawableStart="@drawable/ic_baseline_cake_24"

        android:ems="10"
        android:hint="Date de naissance"
        android:inputType="date"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="#000000"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prenom" />

    <Button
        android:id="@+id/valider"
        android:layout_width="189dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/holo_orange_light"
        android:text="S'inscrire"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password2" />

</androidx.constraintlayout.widget.ConstraintLayout>